<style>
ul{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  position:relative;
}
form{
  margin-left: 13rem;
  margin-top: 9px;
}
.bod{
  font-size: 2.2ch;
  background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
  background-repeat: no-repeat;
  background-size: cover;
  transition: all 0.3s;
  display:flex;
  flex-direction: column;
  justify-content: center;
  height:92.6vh;
}
.card{
  background: transparent !important;
  opacity: 0.78;
  transition: all 0.3s;
}
.card:hover{
  opacity: 1;
  transform: scale(1.03);
  background: radial-gradient(circle, rgba(245,237,240,0.2499124649859944) 0%, rgba(204,216,232,0.42638305322128855) 100%) !important;
  -webkit-box-shadow: 0px 20px 35px -16px rgba(234, 238, 245, 0.676);
  -moz-box-shadow: 0px 20px 35px -16px rgba(226, 223, 223, 0.678);
  box-shadow: 0px 20px 35px -16px rgba(255, 255, 255, 0.623);  
}
.type{
  display: flex;
  align-items: end;
  justify-content: center;
}
.custom-file-input{
  background-image:url("../images/paperclip.svg");
  background-position:center;
  background-repeat: no-repeat;
  background-size: cover;
}
.car{
  max-width: 600px;
  margin:17px 0px 17px 0px;
}
.user{
  margin-left: 38rem;
  margin-top: 10px;
  max-width: 600px;
  display: flex;
  flex-direction: row;
  justify-content: left;
}
.gem{
  display: flex;
  flex-direction: row;
  justify-content: left;
  margin-left: 40px;
  align-self:flex-start;
}
.container-fluid{
  background-color: rgb(241, 241, 241) !important;
  opacity:0.9;
  color: rgb(3, 3, 3);
}
.mes2{
  bottom:0px;
  position:absolute;
  background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
  width:100%;
}
.chat{
  position: relative;
  overflow-y: auto;
  height:400px;
  padding-right:20px;
}
.btn-info{
  background: transparent;
  border: none;
  transition: all 0.35s;
}
.btn-info:hover{
  background: transparent;
  transform: scale(1.1);
  -webkit-box-shadow: 0px 20px 35px -16px rgba(255, 255, 255, 0.947);
  -moz-box-shadow: 0px 20px 35px -16px rgb(255, 250, 250);
  box-shadow: 0px 20px 35px -16px rgba(255, 255, 255, 0.977);  
}
.button-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
#submit{
  margin-left: 20px;
  border-color: rgb(255, 255, 255);
  background:transparent;
  border-style: none;
}
#message{
  width:800px;
  height:65px;
  background:radial-gradient(circle, rgba(245,237,240,0.2499124649859944) 0%, rgba(204,216,232,0.42638305322128855) 100%);
  padding: 20px;
  border-radius: 17px;
  border-color: transparent;
}
#File{
  margin-left: 20px;
  border-color: rgb(255, 255, 255);
  background:transparent;
  border-style: none;
}
#us{
  filter: invert(37%) sepia(62%) saturate(1554%) hue-rotate(213deg) brightness(93%) contrast(91%);
   opacity: 0.8;
   padding-left:14px;
   margin: 14px 14px 0px 0px;
}
#ge{
  margin: 14px 14px 0px 0px;
}
#abc{
  margin-left: 32rem;
  margin-right:0px !important;
}
#filepath{
  width: 700px;
  margin-left: 10px;
  background: transparent;
  border-radius: 10px !important;
}
</style>
